<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- model.name form view -->
        <record id="operator_document_layout_form" model="ir.ui.view">
            <field name="name">operator document Layout</field>
            <field name="model">operator_document</field>
            <field name="arch" type="xml">
                <form string="Operator Document Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="checklist_carrier_id"/>
                                <field name="create_uid"/>
                            </group>
                            <group>
                                <field name="document_id"/>
                                <field name="write_uid" string='Last Modified By'/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- model.name tree view -->
        <record id="operator_document_layout_tree" model="ir.ui.view">
            <field name="name">Operator Document Layout Tree</field>
            <field name="model">operator_document</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="checklist_carrier_id"/>
                    <field name="document_id"/>
                    <field name="create_uid"/>
                </tree>
            </field>
        </record>

        <!-- operator_document action window -->
        <record id="operator_document_layout_action" model="ir.actions.act_window">
            <field name="name">Operator Document Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">operator_document</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('operator_document_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('operator_document_layout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>

        <!-- Lightning View -->
        <record id="operator_document_lightning_layout_form" model="ir.ui.view">
            <field name="name">operator document Lightning Layout</field>
            <field name="model">operator_document</field>
            <field name="arch" type="xml">
                <form string="Operator Document Lightning Layout">
                    <sheet>
                        <notebook>
                            <page string="Details">
                                <group>
                                    <group>
                                        <field name="checklist_carrier_id"/>
                                        <field name="create_uid"/>
                                        <field name="create_date"/>
                                    </group>
                                    <group>
                                        <field name="document_id"/>
                                        <field name="write_uid" string="Last Modified By"/>
                                        <field name="write_date" string="Last Modified On"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Related">
                                <group>
                                    <field name="operator_checklist_ids"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- model.name tree view -->
        <record id="operator_document_lightning_layout_tree" model="ir.ui.view">
            <field name="name">Operator Document lightning Layout Tree</field>
            <field name="model">operator_document</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="checklist_carrier_id"/>
                    <field name="document_id"/>
                    <field name="create_uid"/>
                </tree>
            </field>
        </record>

        <!-- operator_document lightning action window -->
        <record id="operator_document_lightning_layout_action" model="ir.actions.act_window">
            <field name="name">Operator Document</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">operator_document</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('operator_document_lightning_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('operator_document_lightning_layout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>