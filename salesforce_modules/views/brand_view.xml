<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- BrandLayout Start -->
        <record id="brandlayout_form" model="ir.ui.view">
            <field name="name">Brand Layout</field>
            <field name="model">model_brand_c</field>
            <field name="arch" type="xml">
                <form string="BrandLayout">
                    <sheet>
                        <notebook>
                            <page string="Details">
                                <group>
                                    <group>
                                        <field name="Name" required='1'/>
                                        <field name="create_uid" string='Created By'/>
                                        <field name="create_date" string='Created On'/>
                                    </group>
                                    <group>
                                        <field name="OwnerId"/>
                                        <field name="write_uid" string='Last Modified By'/>
                                        <field name="write_date" string='Last Modified On'/>
                                    </group>
                                </group>
                            </page>
                            <page string="Related">
                                <group string="Models">
                                    <field name="model_ids">
                                        <tree>
                                            <field name="name"/>
                                        </tree>
                                    </field>
                                </group>
                                <group string="Fleet">
                                    <field name="fleet_ids">
                                        <tree>
                                            <field name="Name"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Brand Layout tree -->
        <record id="brand_layout_tree" model="ir.ui.view">
            <field name="name">Brand Layout Tree</field>
            <field name="model">model_brand_c</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name"/>
                    <field name="create_uid" string='Created By'/>
                    <field name="OwnerId"/>
                    <field name="write_uid" string='Last Modified By'/>
                </tree>
            </field>
        </record>

        <!-- Brand Layout action window -->
        <record id="brand_layout_action" model="ir.actions.act_window">
            <field name="name">Brand</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_brand_c</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('brand_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('brandlayout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>