<?xml version="1.0" encoding="UTF-8"?>
    <odoo>
    <data>
       <record id="event_control_form" model="ir.ui.view">
            <field name="name">Event Control Layout Form</field>
            <field name="model">event_control</field>
            <field name="arch" type="xml">
                <form string="Event Control">
                    <sheet>
                        <notebook>
                            <page string="Details">
                                <group>
                                    <group>
                                        <field name="name"/>
                                        <field name="Event_ID"/>
                                        <field name="Opportunity_ID"/>
                                        <field name="Assign_ID"/>
                                        <field name="pre_consultant"/>
                                        <field name="Visit"/>
                                        <field name="pre_consultant_current_user"/>
                                        <field name="create_uid"/>
                                        <field name="create_date"/>
                                    </group>
                                    <group>
                                        <field name="Start_Date"/>
                                        <field name="Rescheduled"/>
                                        <field name="cancelled"/>
                                        <field name="write_uid" string='Last Modified By'/>
                                        <field name="write_date" string='Last Modified On'/>
                                    </group>
                                </group>
                            </page>
                            <page string="Related"></page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
       <record id="event_control_tree" model="ir.ui.view">
            <field name="name">Event Control Layout Tree</field>
            <field name="model">event_control</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="Event_ID"/>
                    <field name="Opportunity_ID"/>
                    <field name="Assign_ID"/>
                    <field name="pre_consultant"/>
                    <field name="Visit"/>
                    <field name="pre_consultant_current_user"/>
                    <field name="create_uid"/>
                </tree>
            </field>
        </record>
       <record id="event_control_action" model="ir.actions.act_window">
        <field name="name">Event Control</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">event_control</field>
        <field name="view_mode">form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('event_control_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('event_control_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No records available.
            </p>
        </field>
    </record>
    </data>
</odoo>