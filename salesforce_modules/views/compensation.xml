<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="compensation_view_form" model="ir.ui.view">
        <field name="name">compensation.view.form</field>
        <field name="model">compensation</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="Provision_Number"/>
                            <field name="Parcel_Number"/>
                            <field name="Competence"/>
                            <field name="Due_Date"/>
                            <field name="Payment_Day"/>
                            <field name="Invoice_Number"/>
                            <!-- <field name="status"/> -->
                            <!-- <field name="Income"/> -->
                            <!-- <field name="createdBy"/> -->
                        </group>
                        <group>
                            <field name="OwnerId"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Open Activities">
                            <!-- <field name="line_ids"/> -->
                        </page>
                        <page string="Activity History">
                            <!-- <field name="line_ids"/> -->
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="compensation_action" model="ir.actions.act_window">
        <field name="name">compensation</field>
        <field name="res_model">compensation</field>
        <field name="view_mode">form</field>
    </record>
</odoo>
