<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- model_network_provider Layout form view -->
        <record id="network_provider_layout_form" model="ir.ui.view">
            <field name="name">Network Provider Layout</field>
            <field eval="99" name="priority"/>
            <field name="model">model_network_provider</field>
            <field name="arch" type="xml">
                <form string="Network Provider Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="accredited_network__c"/>
                                <field name="create_uid"/>
                                <field name="Name"/>
                            </group>
                            <group>
                                <field name="How_c"/>
                                <field name="write_uid" string='Last Modified By'/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- model_network_provider tree view -->
        <record id="network_provider_layout_tree" model="ir.ui.view">
            <field name="name">Network Provider Layout Tree</field>
            <field name="model">model_network_provider</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name" />
                    <field name="OwnerId"/>
                    <field name="create_uid" />
                    <field name="write_uid"/>
                </tree>
            </field>
        </record>

        <!-- model_network_provider action window -->
        <record id="network_provider_layout_action" model="ir.actions.act_window">
            <field name="name">Network Provider Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_network_provider</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('network_provider_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('network_provider_layout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>

        <!--Network Provider lightning form view        -->
        <record id="network_provider_lightning_form" model="ir.ui.view">
            <field name="name">Network Provider</field>
            <field name="model">model_network_provider</field>
            <field name="arch" type="xml">
                <form string="Network Provider">
                    <sheet>
                        <notebook>
                            <page string="Details">
                                <group>
                                    <group>
                                        <field name="accredited_network__c"/>
                                        <field name="product2__c"/>
                                        <field name="account__c"/>
                                        <field name="create_uid"/>
                                        <field name="create_date"/>
                                        <field name="Name"/>
                                    </group>
                                    <group>
                                        <field name="ordering__c"/>
                                        <field name="hide_provider__c"/>
                                        <field name="How_c"/>
                                        <field name="write_uid" string="Last Modified By"/>
                                        <field name="write_date" string="Last Modified On"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- model_network_provider tree view -->
        <record id="network_provider_lightning_tree" model="ir.ui.view">
            <field name="name">Network Provider</field>
            <field name="model">model_network_provider</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name" />
                    <field name="OwnerId"/>
                    <field name="create_uid" />
                    <field name="write_uid"/>
                </tree>
            </field>
        </record>

        <!-- model_network_provider action window -->
        <record id="network_provider_lightning_action" model="ir.actions.act_window">
            <field name="name">Network Provider</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_network_provider</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('network_provider_lightning_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('network_provider_lightning_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>