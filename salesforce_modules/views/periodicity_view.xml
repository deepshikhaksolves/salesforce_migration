<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
       <record id="periodicity_form" model="ir.ui.view">
            <field name="name">Periodicity Layout Form</field>
            <field name="model">model.periodicity</field>
            <field name="arch" type="xml">
                <form string="Opportunity Contact Role Layout">
                    <sheet>
                       <group>
                            <group>
                                <field name="name"/>
                                <field name="every"/>
                                <field name="pattern"/>
                                <field name="day_of_the_week"/>
                                <field name="month"/>
                                <field name="user_id"/>
                            </group>
                            <group>
                                <field name="start"/>
                                <field name="end"/>
                                <field name="recurrence"/>
                                <field name="order"/>
                                <field name="last_modified_by_id"/>
                        </group>
                       </group>
                        <notebook>
                            <page string="ServiÃ§os" name="services">
                                <group>
                                    <field name="service_lines" />
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
       <record id="periodicity_tree" model="ir.ui.view">
            <field name="name">Periodicity Layout Tree</field>
            <field name="model">model.periodicity</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="every"/>
                    <field name="pattern"/>
                    <field name="day_of_the_week"/>
                    <field name="month"/>
                    <field name="user_id"/>
                </tree>
            </field>
        </record>
       <record id="periodicity_action" model="ir.actions.act_window">
        <field name="name">Periodicity Layout</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">model.periodicity</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('periodicity_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('periodicity_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No records available.
            </p>
        </field>
    </record>
    </data>
</odoo>