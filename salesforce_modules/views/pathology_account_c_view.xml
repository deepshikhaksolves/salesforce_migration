<odoo>
    <data>
        <!--Pathology Account C Layout form view -->
        <record id="pathology_account_c_form" model="ir.ui.view">
            <field name="name"> Pathology Account Layout</field>
            <field name="model">model_pathology_account_c</field>
            <field name="arch" type="xml">
                <form string="Pathology Account C Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="Name"/>
                                <field name="account_id"/>
                                <field name="pathology_id"/>
                                <field name="pathology_start_date"/>
                                <field name="create_uid" string="Created By"/>
                            </group>
                            <group>
                                <field name="OwnerId"/>
                                <field name="write_uid" string="Last Modified By"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Open Activities">
                            </page>

                            <page string="Activity History">
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Pathology Account C Layout tree view -->
        <record id="pathology_account_c_tree" model="ir.ui.view">
            <field name="name">Patholigy Account C Tree Layout</field>
            <field name="model">model_pathology_account_c</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name"/>
                     <field name="account_id"/>
                    <field name="pathology_id"/>
                    <field name="pathology_start_date"/>
                    <field name="create_uid" string="Created By"/>
                    <field name="write_uid" string="Last Modified By"/>
                </tree>
            </field>
        </record>

        <!-- Pathology Account C Layout action window -->
        <record id="pathology_account_c_action" model="ir.actions.act_window">
            <field name="name">Pathology Account C Action Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_pathology_account_c</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('pathology_account_c_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('pathology_account_c_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>

    </data>
</odoo>