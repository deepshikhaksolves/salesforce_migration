<?xml version="1.0" encoding="UTF-8"?>
    <odoo>
    <data>
       <record id="product_region_form" model="ir.ui.view">
            <field name="name">Layout de Product Region Form</field>
            <field name="model">product.region</field>
            <field name="arch" type="xml">
                <form string="Layout de Product Region">
                    <sheet>
                        <group>
                            <group>
                                <field name="region_id"/>
                                <field name="user_id"/>
                            </group>
                            <group>
                                <field name="product_id"/>
                                <field name="last_modified_by_id"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
       <record id="product_region_tree" model="ir.ui.view">
            <field name="name">Layout de Product Region Tree</field>
            <field name="model">product.region</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="region_id"/>
                    <field name="user_id"/>
                    <field name="product_id"/>
                    <field name="last_modified_by_id"/>
                </tree>
            </field>
        </record>
       <record id="product_region_action" model="ir.actions.act_window">
        <field name="name">Layout de Product Region</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.region</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('product_region_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('product_region_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No records available.
            </p>
        </field>
    </record>
    </data>
</odoo>