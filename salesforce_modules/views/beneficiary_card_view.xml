<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Beneficiary Card Layout Start -->
        <record id="beneficiary_card_layout_form" model="ir.ui.view">
            <field name="name">Beneficiary Card Layout</field>
            <field name="model">model_beneficiary_card</field>
            <field name="arch" type="xml">
                <form string="Beneficiary Card Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="Name"/>
                                <field name="beneficiary"/>
                                <field name="card_code"/>
                                <field name="home_term"/>
                                <field name="end_term"/>
                                <field name="cancellation_date"/>
                                <field name="blocked"/>
                                <field name="Status"/>
                                <field name="type_special_beneficiary"/>
                                <field name="create_uid" string='Created By'/>
                            </group>
                            <group>
                                <field name="OwnerId"/>
                                <field name="write_uid" string='Last Modified By'/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Open Activities"></page>
                            <page string="Activity History"></page>
                            <page string="cost centers"></page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Beneficiary Card Layout Start -->
        <record id="beneficiary_card_layout_tree" model="ir.ui.view">
            <field name="name">Beneficiary Card Layout Tree</field>
            <field name="model">model_beneficiary_card</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name"/>
                    <field name="beneficiary"/>
                    <field name="card_code"/>
                    <field name="home_term"/>
                    <field name="end_term"/>
                    <field name="cancellation_date"/>
                    <field name="blocked"/>
                    <field name="Status"/>
                    <field name="type_special_beneficiary"/>
                    <field name="create_uid" string='Created By'/>
                    <field name="OwnerId"/>
                    <field name="write_uid" string='Last Modified By'/>
                </tree>
            </field>
        </record>

        <!-- Beneficiary Card Layout action window -->
        <record id="beneficiary_card_layout_action" model="ir.actions.act_window">
            <field name="name">Beneficiary Card Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_beneficiary_card</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('beneficiary_card_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('beneficiary_card_layout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>