<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="model_name_view_form" model="ir.ui.view">
        <field name="name">portal.access.view.form</field>
        <field name="model">portal.access</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="OwnerId"/>
                            <field name="carrier_id"/>
                            <field name="administrator__c"/>
                            <field name="financial_group_id"/>
                            <field name="contract__c"/>
                            <field name="registered_email__c"/>
                            <field name="access_users__c"/>
                        </group>
                        <group>
                            <field name="site__c"/>
                            <field name="login__c"/>
                            <field name="access_code__c"/>
                            <field name="password__c"/>
                            <field name="access_type__c"/>
                        </group>
                    </group>
                    <notebook>

                        <page string="Files">
                            <field name="attachment_lines" >
                                <tree string="Attachment" editable="bottom">
                                     <field name="id"/>
                                    <field name="name"/>
                                    <field name="type"/>
                                     <field name="document_use"/>
                                     <field name="financial_contract_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                  <field name="message_follower_ids"/>
                  <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="model_name_view_tree" model="ir.ui.view">
        <field name="name">portal.access.view.tree</field>
        <field name="model">portal.access</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="login__c"/>
                <field name="password__c"/>
            </tree>
        </field>
    </record>

    <record id="portal_access_action" model="ir.actions.act_window">
        <field name="name">portal.access</field>
        <field name="res_model">portal.access</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Lightning Layout -->
    <record id="portal_access_lightning_view_form" model="ir.ui.view">
        <field name="name">portal_access_lightning_view.form</field>
        <field name="model">portal.access</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <notebook>
                        <page string="Details">
                            <group>
                                <group>
                                    <field name="OwnerId"/>
                                    <field name="carrier_id"/>
                                    <field name="administrator__c"/>
                                    <field name="financial_group_id"/>
                                    <field name="contract__c"/>
                                    <field name="registered_email__c" required='1'/>
                                    <field name="access_users__c" required='1'/>
                                </group>
                                <group>
                                    <field name="site__c" required='1'/>
                                    <field name="login__c"/>
                                    <field name="access_code__c"/>
                                    <field name="password__c"/>
                                    <field name="access_type__c" required='1'/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                  <field name="message_follower_ids"/>
                  <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="portal_access_lightning_view_tree" model="ir.ui.view">
        <field name="name">portal_access_lightning.view.tree</field>
        <field name="model">portal.access</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="login__c"/>
                <field name="password__c"/>
            </tree>
        </field>
    </record>

    <record id="portal_access_lightning_action" model="ir.actions.act_window">
        <field name="name">Portal And Access</field>
        <field name="res_model">portal.access</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('portal_access_lightning_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('portal_access_lightning_view_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
    </record>
</odoo>
