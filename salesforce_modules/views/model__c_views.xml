<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- model form view -->
        <record id="model_view_form" model="ir.ui.view">
            <field name="name">Model View Layout</field>
            <field name="model">model__c</field>
            <field name="arch" type="xml">
                <form string="Model View">
                    <sheet>
                        <group>
                            <group>
                                <field name="Name" />
                                <field name="Brand__c"/>
                                <field name="create_uid"/>
                            </group>
                            <group>
                                <field name="OwnerId" />
                                <field name="write_uid"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Open Activities">
                                <group>
                                    
                                </group>
                            </page>
                            <page string="Activity History">
                                <group>
                                    
                                </group>
                            </page>
                            <page string="Opportunities">
                                <group>
                                    
                                </group>
                            </page>
                            <page string="fleets">
                                <group>
                                    
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- model tree view -->
        <record id="model_view_tree" model="ir.ui.view">
            <field name="name">Model Layout Tree</field>
            <field name="model">model__c</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name" />
                    <field name="Brand__c"/>
                    <field name="OwnerId"/>
                    <field name="create_uid"/>
                    <field name="write_uid"/>
                </tree>
            </field>
        </record>

        <!-- model action window -->
        <record id="model_action" model="ir.actions.act_window">
            <field name="name">Model</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model__c</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('model_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('model_view_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>