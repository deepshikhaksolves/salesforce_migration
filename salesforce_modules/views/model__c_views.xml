<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- model form view -->
        <record id="model_view_form" model="ir.ui.view">
            <field name="name">Model View Layout</field>
            <field eval="99" name="priority"/>
            <field name="model">salesforce.model_c</field>
            <field name="arch" type="xml">
                <form string="Model View">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <!-- <field name="model"/> -->
                                <field name="Brand__c" required='1'/>
                                <field name="create_uid"/>
                            </group>
                            <group>
                                <field name="OwnerId" />
                                <field name="write_uid" string="Last Modified By"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Opportunities">
                                <field name="opportunity_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="account_id"/>
                                        <field name="close_date"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="fleets">
                                <field name="fleet_ids">
                                    <tree>
                                        <field name="Name"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- model tree view -->
        <record id="model_view_tree" model="ir.ui.view">
            <field name="name">Model Layout Tree</field>
            <field name="model">salesforce.model_c</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="Brand__c"/>
                    <field name="OwnerId"/>
                    <field name="create_uid"/>
                    <field name="write_uid"/>
                </tree>
            </field>
        </record>

        <!-- model action window -->
        <record id="model_action" model="ir.actions.act_window">
            <field name="name">Model</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">salesforce.model_c</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('model_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('model_view_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>

        <!-- model llightning form view -->
        <record id="model_lightning_view_form" model="ir.ui.view">
            <field name="name">Model View Layout</field>
            <field name="model">salesforce.model_c</field>
            <field name="arch" type="xml">
                <form string="Model">
                    <sheet>
                        <notebook>
                            <page string="Details">
                                <group>
                                    <group>
                                        <field name="name"/>
                                        <field name="Brand__c"/>
                                        <field name="create_uid" string="Created By"/>
                                        <field name="create_date" string="Created On"/>
                                    </group>
                                    <group>
                                        <field name="OwnerId"/>
                                        <field name="write_uid" string="Last Modified By"/>
                                        <field name="write_date" string="Last Modified On"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Related">
                                <group string="Contracts">
                                    <field name="contract_ids">
                                        <tree>
                                            <field name="name" string="Contract Name"/>
                                            <field name="Account_id"/>
                                            <field name="state"/>
                                        </tree>
                                    </field>
                                </group>
                                <group string="Opportunities">
                                    <field name="opportunity_ids">
                                        <tree>
                                            <field name="name"/>
                                            <field name="account_id"/>
                                            <field name="close_date"/>
                                        </tree>
                                    </field>
                                </group>
                                <group string="Fleets">
                                    <field name="fleet_ids">
                                        <tree>
                                            <field name="Name"/>
                                        </tree>
                                </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- model lightning tree view -->
        <record id="model_lightning_tree_view" model="ir.ui.view">
            <field name="name">Model</field>
            <field name="model">salesforce.model_c</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="Brand__c"/>
                    <field name="OwnerId"/>
                    <field name="create_uid"/>
                    <field name="write_uid"/>
                </tree>
            </field>
        </record>

        <!-- model action window -->
        <record id="model_lightning_action" model="ir.actions.act_window">
            <field name="name">Model</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">salesforce.model_c</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('model_lightning_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('model_lightning_view_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>