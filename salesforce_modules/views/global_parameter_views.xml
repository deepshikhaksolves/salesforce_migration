<?xml version="1.0" encoding="UTF-8"?>
    <odoo>
    <data>
       <record id="global_parameter_form" model="ir.ui.view">
            <field name="name">Global Parameter Layout Form</field>
            <field name="model">global_parameter</field>
            <field name="arch" type="xml">
                <form string="Global Parameter">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="email_id"/>
                                <field name="active"/>
                                <field name="financial_group_id"/>
                                <field name="create_uid"/>
                            </group>
                            <group>
                                <field name="OwnerId"/>
                                <field name="write_uid" string="Last Modified By"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
       <record id="global_parameter_tree" model="ir.ui.view">
            <field name="name">Global Parameter Layout Tree</field>
            <field name="model">global_parameter</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="email_id"/>
                    <field name="active"/>
                    <field name="financial_group_id"/>
                    <field name="create_uid"/>
                </tree>
            </field>
        </record>
       <record id="global_parameter_action" model="ir.actions.act_window">
        <field name="name">Global Parameter</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">global_parameter</field>
        <field name="view_mode">form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('global_parameter_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('global_parameter_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No records available.
            </p>
        </field>
    </record>
    </data>
</odoo>