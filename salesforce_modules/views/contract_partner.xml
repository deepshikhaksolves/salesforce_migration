<?xml version="1.0" encoding="UTF-8"?>
    <odoo>
    <data>
       <record id="contract_partner_form" model="ir.ui.view">
            <field name="name">Contract Partner Layout Form</field>
            <field name="model">contract.partner</field>
            <field name="arch" type="xml">
                <form string="Layout de Partner">
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="role"/>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
       <record id="contract_partner_tree" model="ir.ui.view">
            <field name="name">Contract Partner Layout Tree</field>
            <field name="model">contract.partner</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="partner_id"/>
                    <field name="role"/>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>
       <record id="contract_partner_action" model="ir.actions.act_window">
        <field name="name">Opportunity Contact Role</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">contract.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('contract_partner_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('contract_partner_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No records available.
            </p>
        </field>
    </record>
    </data>
</odoo>