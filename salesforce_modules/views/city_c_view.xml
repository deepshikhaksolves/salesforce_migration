<odoo>
    <data>
        <!--City C Layout form view -->
        <record id="city_c_form" model="ir.ui.view">
            <field name="name">City C Layout</field>
            <field name="model">model_city_c</field>
            <field name="arch" type="xml">
                <form string="City C Layout">
                    <sheet>
                        <notebook>
                            <page string="Details">
                                <group>
                                    <group>
                                        <field name="Name"/>
                                        <field name="City_Code"/>
                                        <field name="State_id"/>
                                        <field name="create_uid" string="Created By"/>
                                        <field name="create_date" string="Created On"/>
                                        <field name="write_uid" string="Last Modified By"/>
                                        <field name="write_date" string='Last Modified On'/>
                                    </group>
                                </group>
                            </page>
                            <page string='Related'>
                                <group string="Region Cities">
                                    <field name="region_city_ids"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- City C Layout tree view -->
        <record id="city_c_tree" model="ir.ui.view">
            <field name="name">City C Tree</field>
            <field name="model">model_city_c</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name"/>
                    <field name="City_Code"/>
                    <field name="State_id"/>
                </tree>
            </field>
        </record>

        <!-- City C Layout action window -->
        <record id="city_c_action" model="ir.actions.act_window">
            <field name="name">City</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_city_c</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('city_c_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('city_c_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>

    </data>
</odoo>