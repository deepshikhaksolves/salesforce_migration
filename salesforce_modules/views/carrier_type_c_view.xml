<odoo>
    <data>
        <!--Carrier Type C Layout form view -->
        <record id="carrier_type_c_form" model="ir.ui.view">
            <field name="name">Carrier Type C Layout</field>
            <field name="model">model_carrier_type_c</field>
            <field name="arch" type="xml">
                <form string="Carrier Type C Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="Name"/>
                                <field name="Initials"/>
                                <field name="create_uid" string="Created By"/>
                            </group>
                            <group>
                                <field name="Carrier_Type"/>
                                <field name="write_uid" string="Last Modified By"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Operators">
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

         <!-- Carrier Type C Layout tree view -->
        <record id="carrier_type_c_tree" model="ir.ui.view">
            <field name="name">Carrier Type C Tree</field>
            <field name="model">model_carrier_type_c</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name"/>
                    <field name="Initials"/>
                    <field name="Carrier_Type"/>
                </tree>
            </field>
        </record>

        <!-- Carrier Type C Layout action window -->
        <record id="carrier_type_c_action" model="ir.actions.act_window">
            <field name="name">Carrier Type C Action Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_carrier_type_c</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('carrier_type_c_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('carrier_type_c_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>

<!--        Carrier Type  Lightning form view-->
        <record id="carrier_type_lightning_form_view" model="ir.ui.view">
            <field name="name">Carrier Type</field>
            <field name="model">model_carrier_type_c</field>
            <field name="arch" type="xml">
                <form string="Carrier Type">
                    <sheet>
                        <notebook>
                            <page string="Details">
                                <group>
                                    <group>
                                        <field name="Name"/>
                                        <field name="Initials"/>
                                        <field name="create_uid"/>
                                    </group>
                                    <group>
                                        <field name="Carrier_Type"/>
                                        <field name="write_uid" string="Last Modified By"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Related">
                                <group string="Operators">
                                    <field name="account_ids">
                                        <tree>
                                            <field name="carrier_type__c"/>
                                            <field name="benefits__c"/>
                                            <field name="phone"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

         <!-- Carrier Type Lightning tree view -->
        <record id="carrier_type_lightning_tree" model="ir.ui.view">
            <field name="name">Carrier Type</field>
            <field name="model">model_carrier_type_c</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name"/>
                    <field name="Initials"/>
                    <field name="Carrier_Type"/>
                </tree>
            </field>
        </record>

        <!-- Carrier Type C Layout action window -->
        <record id="carrier_type_lightning_action" model="ir.actions.act_window">
            <field name="name">Carrier Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_carrier_type_c</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('carrier_type_lightning_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('carrier_type_lightning_form_view')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>

    </data>
</odoo>