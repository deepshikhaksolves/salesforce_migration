<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- State Layout Start -->
        <record id="state_layout_form" model="ir.ui.view">
            <field name="name">State Layout</field>
            <field name="model">res.country.state</field>
            <field name="arch" type="xml">
                <form string="State Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="State_Initials"/>
                                <field name="Geographic_Scope_id"/>
                                <field name="create_uid" string='Created By'/>
                            </group>
                            <group>
                                <field name="code"/>
                                <field name="country_id"/>
                                <field name="write_uid" string='Last Modified By'/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Cities">
                                <field name="city_ids">
                                    <tree>
                                        <field name="Name"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Region States">
                                <field name="state_region_ids">
                                    <tree>
                                        <field name="Name"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- State tree view -->
        <record id="state_layout_view_tree" model="ir.ui.view">
            <field name="name">State Layout Tree</field>
            <field name="model">res.country.state</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="State_Initials"/>
                    <field name="Geographic_Scope_id"/>
                    <field name="create_uid" string='Created By'/>
                    <field name="code"/>
                    <field name="country_id"/>
                    <field name="write_uid" string='Last Modified By'/>
                </tree>
            </field>
        </record>

        <!-- State Layout action window -->
        <record id="state_layout_action" model="ir.actions.act_window">
            <field name="name">State</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.country.state</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('state_layout_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('state_layout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>