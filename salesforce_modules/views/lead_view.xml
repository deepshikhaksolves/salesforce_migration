        <!-- Broker Lead Layout PF form view -->
        <record id="broker_lead_layout_pf_form" model="ir.ui.view">
            <field name="name">broker_lead Layout</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <form string="broker_lead Layout">
                    <header>
                        <field name="stage_id" widget='statusbar'/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string="Name" required='1'/>
                                <field name="cpf_c"/>
                                <field name="phone"/>
                                <field name="extension_number_c"/>
                                <field name="mobile"/>
                                <field name="secondary_mobile_phone_c"/>
                                <field name="email_from" string='Email'/>
                                <field name="Date_of_Birth_c"/>
                                <field name="LeadSource"/>

                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options="{'no_open': True, 'no_quick_create': True}"
                                           context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                </div>

                                <field name="rescue_date_c"/>
                                <field name="loss_comment_c"/>
                                <field name="CNAE_c" string='CNAE'/>
                            </group>
                            <group>
                                <field name="team_id" invisible='1'/>
                                <field name="telemarketing_c" required='1'/>
                                <!-- <field name="stage_id" string='Lead Status' required='1'/> -->
                                <field name="Sales_Channel_c"/>
                                <field name="actual_carrier_c"
                                       options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                                <field name="actual_invoice_c"/>
                                <field name="actual_lifes_c"/>
                                <field name="actual_birth_policy_c"/>
                                <field name="Mailing_Origin_c"/>
                            </group>
                        </group>
                        <!-- <notebook>
                            <page string="Notes">
                                <field name="attachment_ids">
                                    <tree>
                                        <field name="name" string='Attachment Name'/>
                                    </tree>
                                </field>
                            </page>
                        </notebook> -->
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

