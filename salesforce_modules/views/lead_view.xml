        <!-- Lead Layout Start -->
        <record id="lead_layout_form" model="ir.ui.view">
            <field name="name">lead Layout form</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <form string="Lead Layout">
                    <header>
                        <field name="stage_id" widget='statusbar'/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="team_id" invisible='1'/>
