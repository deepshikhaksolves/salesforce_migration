<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- Broker Lead Layout form view -->
        <record id="broker_lead_layout_pf_form" model="ir.ui.view">
            <field name="name">broker_lead Layout</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <form string="broker_lead Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string="Name"/>
                                <field name="cpf__c" />
                                <field name="phone"/>
                                <field name="extension_number__c" />
                                <field name="mobile"/>
                                <field name="secondary_mobile_phone__c"/>
                                <field name="email_from" string='Email'/>
                                <field name="Date_of_Birth__c"/>
                                <field name="LeadSource"/>

                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street" />
                                    <field name="city" placeholder="City" class="o_address_city" />
                                    <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip" />
                                    <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" />
                                </div>

                                <field name="rescue_date__c"/>
                                <field name="loss_comment__c"/>
                            </group>
                            <group>
                                <field name="team_id" invisible='1'/>
                                <field name="telemarketing__c"/>
                                <field name="stage_id" string='Lead Status'/>
                                <field name="Sales_Channel__c"/>
                                <field name="actual_carrier__c" options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                                <field name="actual_invoice__c"/>
                                <field name="actual_lifes__c"/>
                                <field name="actual_birth_policy__c"/>
                                <field name="Mailing_Origin__c"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <group>

                                </group>
                            </page>
                            <page string="Lead History">
                                <group>

                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- broker_lead tree view -->
        <record id="broker_lead_layout_pf_tree" model="ir.ui.view">
            <field name="name">broker_lead Layout Tree</field>
            <field name="model">crm.lead</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="cpf__c"/>
                    <field name="phone"/>
                    <field name="extension_number__c"/>
                    <field name="mobile" />
                    <field name="secondary_mobile_phone__c"/>
                </tree>
            </field>
        </record>

        <!-- broker_lead_layout action window -->
        <record id="broker_lead_layout_pf_action" model="ir.actions.act_window">
            <field name="name">Broker Lead Layout PF</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.lead</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
