                                <field name="Sales_Channel__c"/>
                                <field name="Nominative__c"/>
                                <field name="Rating"/>
                                <field name="Mailing_Origin__c"/>
                                <field name="LeadSource"/>
                                <field name="actual_birth_policy__c"/>

                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options="{'no_open': True, 'no_quick_create': True}"
                                           context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                </div>

                                <field name="OwnerId"/>

                            </group>
                        </group>
                        <group string="System Information">
                            <group>
                                <field name="type" string='Lead Record Type'/>
                            </group>
                        </group>
                        <notebook>
                            <!-- <page string="Data Integration Rules">
                                <group>

                                </group>
                            </page> -->
                            <!-- <page string="Notes">
                                <field name="attachment_ids">
                                    <tree string="Attachment" editable="bottom">
                                        <field name="id"/>
                                        <field name="name"/>
                                        <field name="type"/>
                                        <field name="document_use"/>
                                        <field name="financial_contract_id"/>
                                    </tree>
                                </field>
                            </page> -->
                            <page string="Benefits Politic">
                                <field name="benifit_ids">
                                    <tree>
                                        <field name="Name" string='Benefit Politic'/>
                                        <field name="Contract_End" string='Policy Anniversary'/>
                                        <field name="Life"/>
                                        <field name="Monthly_Bill"/>
                                        <field name="Revenue"/>
                                        <field name="Use_Product"/>
                                        <field name="Offer"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

