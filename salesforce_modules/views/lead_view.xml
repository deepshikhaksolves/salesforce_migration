                                <field name="create_uid"/>
                            </group>
                            <group>
                                <field name="write_uid" string='Last Modified By'/>
                            </group>
                        </group>
                        <group string="Custom Links">

                        </group>
                        <notebook>
                            <page string="Files">
                                <field name="attachment_ids">
                                    <tree>
                                        <field name="name" string='Attachment Name'/>
