<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="broker_rating_view_form" model="ir.ui.view">
        <field name="name">broker.rating.view.form</field>
        <field name="model">broker.rating</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="Rating"/>
                            <field name="Start"/>
                            <field name="End"/>
                            <field name="Segmentation"/>
                            <field name="create_uid"/>
                        </group>
                        <group>
                            <field name="OwnerId"/>
                            <field name="Broker"/>
                            <field name="Name"/>
                            <field name="write_uid" string='Last Modified By'/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="broker_rating_action" model="ir.actions.act_window">
        <field name="name">broker.rating</field>
        <field name="res_model">broker.rating</field>
        <field name="view_mode">form</field>
    </record>
</odoo>
