<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- lead sort columns in campaign form view -->
        <record id="lead_sort_column_view_form" model="ir.ui.view">
            <field name="name">lead_sort_column_view Layout</field>
            <field name="model">lead_sort_colums_in_capaign</field>
            <field name="arch" type="xml">
                <form string="Lead Sort Columns View">
                    <sheet>
                        <group>
                            <group>
                                <field name="Field__c" />
                                <field name="SortOrder__c"/>
                            </group>
                            <group>
                                <field name="Name"/>
                                <field name="OwnerId"/>
                                <field name="Campaign__c"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- lead sort columns in campaign tree view -->
        <record id="lead_sort_column_view_tree" model="ir.ui.view">
            <field name="name">lead sort column Layout Tree</field>
            <field name="model">lead_sort_colums_in_capaign</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Field__c" />
                    <field name="SortOrder__c"/>
                    <field name="Name"/>
                    <field name="OwnerId"/>
                    <field name="Campaign__c"/>
                </tree>
            </field>
        </record>

        <!-- lead sort columns in campaign action window -->
        <record id="lead_sort_columns_campaign_action" model="ir.actions.act_window">
            <field name="name">Lead sort column In Campaign</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">lead_sort_colums_in_capaign</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('lead_sort_column_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('lead_sort_column_view_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>