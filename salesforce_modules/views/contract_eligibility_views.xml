<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- model.name form view -->
        <record id="contract_eligibility_layout_form" model="ir.ui.view">
            <field name="name">Contract Eligibility Layout</field>
            <field name="model">contract_eligibility</field>
            <field name="arch" type="xml">
                <form string="Contract Eligibility Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="Elegibility_id" />
                                <field name="contract_id"/>
                                <field name="Contract_Plan_id"/>
                            </group>
                            <group>
                                <field name="Start_Date"/>
                                <field name="End_Date"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- model.name tree view -->
        <record id="contract_eligibility_layout_tree" model="ir.ui.view">
            <field name="name">Contract Eligibility Layout Tree</field>
            <field name="model">contract_eligibility</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="Elegibility_id" />
                    <field name="contract_id"/>
                    <field name="Contract_Plan_id"/>
                </tree>
            </field>
        </record>

        <!-- contract_team action window -->
        <record id="contract_eligibility_action" model="ir.actions.act_window">
            <field name="name">Contract Eligibility Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">contract_eligibility</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('contract_eligibility_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('contract_eligibility_layout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>