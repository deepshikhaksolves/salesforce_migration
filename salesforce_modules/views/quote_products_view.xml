<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- quote product Layout Start -->
         <record id="quote_product_layout_form" model="ir.ui.view">
            <field name="name">Quote Product Layout</field>
            <field name="model">model_quote_products</field>
            <field name="arch" type="xml">
                <form string="Quote Product Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="Name"/>
                                <field name="Quote_id"/>
                                <field name="Benefits"/>
                                <field name="create_uid" string='Created By'/>
                            </group>
                            <group>
                                <field name="OwnerId"/>
                                <field name="Product_id"/>
                                <field name="Cost_Type"/>
                                <field name="Value"/>
                                <field name="write_uid" string='Last Modified By'/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
         </record>

        <!-- Quote Product tree view -->
        <record id="quote_product_layout_view_tree" model="ir.ui.view">
            <field name="name">Quote Product Layout Tree</field>
            <field name="model">model_quote_products</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name"/>
                                <field name="Quote_id"/>
                                <field name="Benefits"/>
                                <field name="create_uid" string='Created By'/>
                                <field name="OwnerId"/>
                                <field name="Product_id"/>
                                <field name="Cost_Type"/>
                                <field name="Value"/>
                                <field name="write_uid" string='Last Modified By'/>
                </tree>
            </field>
        </record>

        <!-- Quote Products Layout action window -->
        <record id="quote_product_layout_action" model="ir.actions.act_window">
            <field name="name">Quote Product</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_quote_products</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('quote_product_layout_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('quote_product_layout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>