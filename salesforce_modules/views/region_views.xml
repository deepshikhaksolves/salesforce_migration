<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- region Layout form view -->
        <record id="region_layout_form" model="ir.ui.view">
            <field name="name">Region Layout</field>
            <field name="model">model_region</field>
            <field name="arch" type="xml">
                <form string="Region Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="Name" required='1'/>
                                <field name="active__c"/>
                                <field name="create_uid"/>
                            </group>
                            <group>
                                <field name="OwnerId"/>
                                <field name="write_uid" string='Last Modified By'/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Region States">
                                <field name="region_state_ids">
                                    <tree>
                                        <field name="Name"/>
                                        <field name="state_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Region Cities">
                                <field name="region_city_ids">
                                    <tree>
                                        <field name="Name"/>
                                        <field name="city__c"/>
                                        <field name="priority"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Product Regions">
                                <field name="product_region_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="product_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Prices x Regions">
                                <field name="price_x_region_ids">
                                    <tree>
                                        <field name="Name"/>
                                        <field name="product_price_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Accredited Networks">
                                <field name="accredited_network_ids">
                                    <tree>
                                        <field name="Name"/>
                                        <field name="active__c"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- region tree view -->
        <record id="region_layout_tree" model="ir.ui.view">
            <field name="name">Region Layout Tree</field>
            <field name="model">model_region</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name" />
                    <field name="active__c"/>
                    <field name="OwnerId"/>
                    <field name="create_uid" />
                    <field name="write_uid"/>
                </tree>
            </field>
        </record>

        <!-- region action window -->
        <record id="region_layout_action" model="ir.actions.act_window">
            <field name="name">Region Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_region</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('region_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('region_layout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>