<odoo>
    <data>
        <!--Market Reserve Active MDT Layout form view -->
        <record id="market_reserve_active_mdt_form" model="ir.ui.view">
            <field name="name">Market Reserve Active MDT Form Layout</field>
            <field name="model">model_market_reserve_active_mdt</field>
            <field name="arch" type="xml">
                <form string="Market Reserve Active MDT Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="MasterLabel"/>
                                <field name="DeveloperName"/>
                            </group>
                            <group>
                                <field name="IsProtected"/>
                                <field name="NamespacePrefix"/>
                                <field name="isActive"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Market Reserve Active MDT Layout tree view -->
        <record id="market_reserve_active_mdt_tree" model="ir.ui.view">
            <field name="name">Market Reserve Active MDT</field>
            <field name="model">model_market_reserve_active_mdt</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="MasterLabel"/>
                    <field name="DeveloperName"/>
                    <field name="IsProtected"/>
                    <field name="NamespacePrefix"/>
                    <field name="isActive"/>
                </tree>
            </field>
        </record>

        <!-- Market Reserve Active MDT action window -->
        <record id="market_reserve_active_mdt_action" model="ir.actions.act_window">
            <field name="name">Market Reserve Active MDT Action Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_market_reserve_active_mdt</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('market_reserve_active_mdt_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('market_reserve_active_mdt_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>