<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Study Configuration Product Start -->
        <record id="study_configuration_product_layout_form" model="ir.ui.view">
            <field name="name">Study Configuration Product Layout Form</field>
            <field name="model">model_study_configuration_product</field>
            <field name="arch" type="xml">
                <form string="Study Configuration Product Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="product" required="1"/>
                                <field name="minimum_lives" required="1"/>
                                <field name="minimum_holder_lives" required="1"/>
                                <field name="create_uid" string='Created By'/>
                            </group>
                            <group>
                                <field name="study_configuration_id" required="1"/>
                                <field name="Maximum_Lives" required="1"/>
                                <field name="maximum_plus_59_lives" required="1"/>
                                <field name="write_uid" string='Last Modified By'/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Study Configuration Product tree view -->
        <record id="study_configuration_product_layout_tree" model="ir.ui.view">
            <field name="name">Study Configuration Product Layout Tree</field>
            <field name="model">model_study_configuration_product</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product"/>
                    <field name="minimum_lives"/>
                    <field name="minimum_holder_lives"/>
                    <field name="create_uid" string='Created By'/>
                    <field name="study_configuration_id"/>
                    <field name="Maximum_Lives"/>
                    <field name="maximum_plus_59_lives"/>
                    <field name="write_uid" string='Last Modified By'/>
                </tree>
            </field>
        </record>

        <!-- Study Configuration Product action window -->
        <record id="study_configuration_product_layout_action" model="ir.actions.act_window">
            <field name="name">Study Configuration Product Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_study_configuration_product</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('study_configuration_product_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('study_configuration_product_layout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>