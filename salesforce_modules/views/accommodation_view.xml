<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Accommodation Layout Start -->
        <record id="accommodation_layout_form" model="ir.ui.view">
            <field name="name">Accommodation Layout</field>
            <field name="model">model_accommodation</field>
            <field name="arch" type="xml">
                <form string="Accomomodation Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="Name"/>
                                <field name="Abbreviation"/>
                                <field name="create_uid" string='Created By'/>
                            </group>
                            <group>
                                <field name="Accommodation_ID"/>
                                <field name="write_uid" string='Last Modified By'/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Accommodation Layout tree view -->
        <record id="accommodation_layout_tree" model="ir.ui.view">
            <field name="name">Accommodation Layout Tree</field>
            <field name="model">model_accommodation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name"/>
                    <field name="Abbreviation"/>
                    <field name="create_uid" string='Created By'/>
                    <field name="Accommodation_ID"/>
                    <field name="write_uid" string='Last Modified By'/>
                </tree>
            </field>
        </record>

        <!-- Accommodation Layout action window -->
        <record id="accommodation_layout_action" model="ir.actions.act_window">
            <field name="name">Accommodation Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_accommodation</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('accommodation_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('accommodation_layout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>