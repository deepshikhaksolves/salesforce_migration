    <record id="salres_partner_action" model="ir.actions.act_window">
        <field name="name">Contact</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">form</field>
        <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('res_partner_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('res_partner_view_form')})]"/>
    </record>
    <record id="salres_partner_old_action" model="ir.actions.act_window">
        <field name="name">res.partner</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="res_partner_old_view_form"/>
    </record>
</odoo>
