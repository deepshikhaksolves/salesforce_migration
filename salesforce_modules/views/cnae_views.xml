<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- cnae form view -->
        <record id="cnae_view_form" model="ir.ui.view">
            <field name="name">cnae_view Layout</field>
            <field name="model">model_cnae</field>
            <field name="arch" type="xml">
                <form string="CNAE View">
                    <sheet>
                        <group>
                            <group>
                                <field name="Code" />
                                <field name="Description_c"/>
                                <field name="OwnerId"/>
                                <field name="Parent_Code_c"/>
                                <field name="Risk_Level_c"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- cnae tree view -->
        <record id="cnae_view_tree" model="ir.ui.view">
            <field name="name">cnae Layout Tree</field>
            <field name="model">model_cnae</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Code" />
                    <field name="Description_c"/>
                    <field name="OwnerId"/>
                    <field name="Parent_Code_c"/>
                    <field name="Risk_Level_c"/>
                </tree>
            </field>
        </record>

        <!-- cnae action window -->
        <record id="cnae_action" model="ir.actions.act_window">
            <field name="name">CNAE</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_cnae</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('cnae_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('cnae_view_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>