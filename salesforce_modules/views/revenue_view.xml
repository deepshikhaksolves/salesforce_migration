<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- Recipe Type Layout form view -->
        <record id="recipe_type_layout_form" model="ir.ui.view">
            <field name="name">recipe_type Layout</field>
            <field name="model">account.account</field>
            <field name="arch" type="xml">
                <form string="recipe_type Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string="Benefit Carrier Revenue Name"/>
                                <field name="code"/>
                                <field name="user_type_id"/>
                                <field name="Prefix__c" />
                                <field name="Income_Type__c"/>
                                <field name="create_uid" />
                            </group>
                            <group>
                                <field name="OwnerId"/>
                                <field name="write_uid" string='Last Modified By'/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- recipe_type tree view -->
        <record id="recipe_type_layout_tree" model="ir.ui.view">
            <field name="name">recipe_type Layout Tree</field>
            <field name="model">account.account</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="Prefix__c"/>
                    <field name="Income_Type__c"/>
                    <field name="OwnerId"/>
                    <field name="create_uid" />
                    <field name="write_uid"/>
                </tree>
            </field>
        </record>

        <!-- recipe_type_layout action window -->
        <record id="recipe_type_layout_action" model="ir.actions.act_window">
            <field name="name">Recipe Type Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.account</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('recipe_type_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('recipe_type_layout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>