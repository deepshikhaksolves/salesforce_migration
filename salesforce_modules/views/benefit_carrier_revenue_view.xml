<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Benefit Carrier Revenue Layout Start -->
        <record id="benefit_carrier_revenue_layout_form" model="ir.ui.view">
            <field name="name">Benefit Carrier Revenue Layout</field>
            <field name="model">model_beneficiary_carrier_revenue</field>
            <field name="arch" type="xml">
                <form string="Benefit Carrier Revenue Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="Name"/>
                                <field name="carrier_id"/>
                                <field name="create_uid" string='Created By'/>
                            </group>
                            <group>
                                <field name="OwnerId"/>
                                <field name="write_uid" string='Last Modified By'/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Benefit Carrier Revenue Layout tree -->
        <record id="benefit_carrier_revenue_layout_tree" model="ir.ui.view">
            <field name="name">Benefit Carrier Revenue Layout Tree</field>
            <field name="model">model_beneficiary_carrier_revenue</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name"/>
                    <field name="carrier_id"/>
                    <field name="create_uid" string='Created By'/>
                    <field name="OwnerId"/>
                    <field name="write_uid" string='Last Modified By'/>
                </tree>
            </field>
        </record>

        <!-- Benefit Carrier Revenue Layout action window -->
        <record id="benefit_carrier_revenue_layout_action" model="ir.actions.act_window">
            <field name="name">Benefit Carrier Revenue Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_beneficiary_carrier_revenue</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('benefit_carrier_revenue_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('benefit_carrier_revenue_layout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>