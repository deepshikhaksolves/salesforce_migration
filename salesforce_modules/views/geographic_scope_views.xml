<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- model.name form view -->
        <record id="geographic_scope_layout_form" model="ir.ui.view">
            <field name="name">Geographic Scope Layout</field>
            <field name="model">model_geographic_scope</field>
            <field name="arch" type="xml">
                <form string="Geographic Scope Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="Name" />
                                <field name="Abbreviation__c" />
                                <field name="create_uid" />
                            </group>
                            <group>
                                <field name="Geographic_Scope_ID__c"/>
                                <field name="Geographic_Scope_tnk__c"/>
                                <field name="write_uid" string='Last Modified By'/>
                            </group>
                        </group>
                    </sheet>
                    <notebook>
                        <page string="Products">
                            <field name="product_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="ProductCode"/>
                                    <field name="Description"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Cities">
                            <field name="address_ids">
                                <tree>
                                    <field name="City" string="City"/>
                                </tree>
                            </field>
                        </page>
                        <page string="State">
                            <field name="address_ids">
                                <tree>
                                    <field name="State__id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- model.name tree view -->
        <record id="geographic_scope_layout_tree" model="ir.ui.view">
            <field name="name">Geographic Scope Layout Tree</field>
            <field name="model">model_geographic_scope</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name"/>
                    <field name="Abbreviation__c"/>
                    <field name="create_uid" />
                    <field name="Geographic_Scope_ID__c"/>
                    <field name="write_uid"/>
                </tree>
            </field>
        </record>

        <!-- geographic_scope_layout action window -->
        <record id="geographic_scope_layout_action" model="ir.actions.act_window">
            <field name="name">Geographic Scope Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_geographic_scope</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('geographic_scope_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('geographic_scope_layout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>