<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- country form view -->
        <record id="country_layout_form" model="ir.ui.view">
            <field name="name">country Layout</field>
            <field name="model">res.country</field>
            <field name="arch" type="xml">
                <form string="country Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" string="Country"/>
                                <field name="code" string="Country Code" />
                                <field name="create_uid"/>
                                <field name="write_uid" string="Last Modified By"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="state">
                                <field name="state_ids">
                                    <tree>
                                        <field name="name" string="State"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- model.name tree view -->
        <record id="country_layout_tree" model="ir.ui.view">
            <field name="name">country Layout Tree</field>
            <field name="model">res.country</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Country"/>
                    <field name="code" string="Country Code" />
                    <field name="create_uid"/>
                    <field name="write_uid" />
                </tree>
            </field>
        </record>

        <!-- country action window -->
        <record id="country_action" model="ir.actions.act_window">
            <field name="name">Country Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.country</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('country_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('country_layout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>