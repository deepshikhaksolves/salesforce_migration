<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- refund Layout Start -->
        <record id="refund_layout_form" model="ir.ui.view">
            <field name="name">Refund Layout</field>
            <field name="model">model_refund</field>
            <field name="arch" type="xml">
                <form string="Refund Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="Name"/>
                                <field name="Event_c"/>
                                <field name="start_date"/>
                            </group>
                            <group>
                                <field name="Product_id"/>
                                <field name="value"/>
                                <field name="end_date"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Refund tree view -->
        <record id="refund_layout_view_tree" model="ir.ui.view">
            <field name="name">Refund Layout Tree</field>
            <field name="model">model_refund</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name"/>
                    <field name="Event_c"/>
                    <field name="start_date"/>
                    <field name="Product_id"/>
                    <field name="value"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>

        <!-- Refund Layout action window -->
        <record id="refund_layout_action" model="ir.actions.act_window">
            <field name="name">Refund</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_refund</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('refund_layout_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('refund_layout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>