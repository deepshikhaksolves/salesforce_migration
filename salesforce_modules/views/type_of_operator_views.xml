<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- type_of_operator form view -->
        <record id="type_of_operator_form" model="ir.ui.view">
            <field name="name">type_of_operator Layout</field>
            <field name="model">type_of_operator</field>
            <field name="arch" type="xml">
                <form string="Type of operator">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- type_of_operator tree view -->
        <record id="type_of_operator_layout_tree" model="ir.ui.view">
            <field name="name">type_of_operator Layout Tree</field>
            <field name="model">type_of_operator</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- type_of_operator action window -->
        <record id="type_of_operator_layout_action" model="ir.actions.act_window">
            <field name="name">Type of operator</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">type_of_operator</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('type_of_operator_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('type_of_operator_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>