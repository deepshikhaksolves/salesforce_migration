<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- model_cost_center form view -->
        <record id="cost_center_layout_form" model="ir.ui.view">
            <field name="name">Cost Center Layout</field>
            <field name="model">model_cost_center</field>
            <field name="arch" type="xml">
                <form string="Cost Center Form">
                    <sheet>
                        <group>
                            <group>
                                <field name="cost_center" />
                                <field name="beneficiary_id" />
                                <field name="beneficiary_card_id"/>
                                <field name="home_term"/>
                                <field name="end_term"/>
                                <field name="status"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- model.name tree view -->
        <record id="cost_center_layout_tree" model="ir.ui.view">
            <field name="name">Contract Team Layout Tree</field>
            <field name="model">model_cost_center</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="cost_center" />
                    <field name="beneficiary_id" />
                    <field name="beneficiary_card_id"/>
                    <field name="home_term"/>
                    <field name="end_term"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <!-- model_cost_center action window -->
        <record id="cost_center_action" model="ir.actions.act_window">
            <field name="name">Cost Center Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_cost_center</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('cost_center_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('cost_center_layout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>