<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- Service Reason Config form view -->
        <record id="service_reason_config_form" model="ir.ui.view">
            <field name="name">Service Reason Config Form</field>
            <field name="model">service_reason_config</field>
            <field name="arch" type="xml">
                <form string="Service Reason Config">
                    <sheet>
                        <group>
                            <group>
                                <field name="Name" />
                                <field name="Default"/>
                                <field name="solicitation_id"/>
                                <field name="Case_Reason"/>
                                <field name="create_uid"/>
                            </group>
                            <group>
                                <field name="OwnerId"/>
                                <field name="write_uid" string='Last Modified By'/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Open Activities">
                                <group>
                                    
                                </group>
                            </page>
                            <page string="Activity History">
                                <group>
                                    
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Service Reason Config tree view -->
        <record id="service_reason_config_tree" model="ir.ui.view">
            <field name="name">Service Reason Config Tree</field>
            <field name="model">service_reason_config</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name" />
                    <field name="Default"/>
                    <field name="solicitation_id"/>
                    <field name="Case_Reason"/>
                    <field name="create_uid"/>
                </tree>
            </field>
        </record>

        <!-- Service Reason Config action window -->
        <record id="service_reason_config_action" model="ir.actions.act_window">
            <field name="name">Request Fulfillment Reason</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">service_reason_config</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('service_reason_config_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('service_reason_config_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>