<odoo>
    <data>
        <!--Comments C Layout form view -->
        <record id="comments_c_form" model="ir.ui.view">
            <field name="name">Comments C Layout</field>
            <field name="model">model_comments_c</field>
            <field name="arch" type="xml">
                <form string="Comments C Layout">
                    <sheet>
                        <group>
                            <field name="Name"/>
                            <field name="Type"/>
                            <field name="How"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Comments C Layout tree view -->
        <record id="comments_c_tree" model="ir.ui.view">
            <field name="name">Comments C Tree</field>
            <field name="model">model_comments_c</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name"/>
                    <field name="Type"/>
                    <field name="How"/>
                </tree>
            </field>
        </record>

        <!-- Comment C Layout action window -->
        <record id="comments_c_action" model="ir.actions.act_window">
            <field name="name">Comment C Action Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_comments_c</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('comments_c_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('comments_c_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>

    </data>
</odoo>