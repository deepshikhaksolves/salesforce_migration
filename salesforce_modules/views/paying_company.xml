<?xml version="1.0" encoding="UTF-8"?>
    <odoo>
    <data>
       <record id="paying_company_form" model="ir.ui.view">
            <field name="name">Paying Company Layout Form</field>
            <field name="model">paying.company</field>
            <field name="arch" type="xml">
                <form string="Paying Company Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="carrier_id"/>
                                <field name="user_id"/>
                            </group>
                            <group>
                                <field name="owner_id"/>
                                <field name="last_modified_by_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
       <record id="paying_company_tree" model="ir.ui.view">
            <field name="name">Paying Company Layout Tree</field>
            <field name="model">paying.company</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="carrier_id"/>
                    <field name="user_id"/>
                    <field name="owner_id"/>
                    <field name="last_modified_by_id"/>
                </tree>
            </field>
        </record>
       <record id="paying_company_action" model="ir.actions.act_window">
        <field name="name">Paying Company Layout Form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">paying.company</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('paying_company_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('paying_company_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No records available.
            </p>
        </field>
    </record>
    </data>
</odoo>