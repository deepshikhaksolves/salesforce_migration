<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- Accredited Network Layout form view -->
        <record id="accredited_network_layout_form" model="ir.ui.view">
            <field name="name">Accredited Network Layout Form</field>
            <field eval="99" name="priority"/>
            <field name="model">accredited_network</field>
            <field name="arch" type="xml">
                <form string="Accredited Network Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="Name" required='1'/>
                                <field name="active__c"/>
                                <field name="create_uid"/>
                            </group>
                            <group>
                                <field name="region__c" required='1'/>
                                <field name="write_uid" string='Last Modified By'/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Network Providers Products">
                                <field name="network_provider_ids">
                                    <tree>
                                        <field name="Name"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Products Networks">
                                <field name="product_network_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="product_id" string='Product'/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Quote Line Items">
                                <field name="quote_line_item_ids">
                                    <tree>
                                        <field name="Product2Id" string='Product'/>
                                        <field name="Quantity"/>
                                        <field name="UnitPrice"/>
                                        <field name="ListPrice"/>
                                        <field name="Subtotal"/>
                                        <field name="TotalPrice"/>
                                        <field name="Discount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- accredited_network tree view -->
        <record id="accredited_network_layout_tree" model="ir.ui.view">
            <field name="name">Accredited Network Layout Tree</field>
            <field name="model">accredited_network</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name" />
                    <field name="active__c"/>
                    <field name="region__c"/>
                    <field name="create_uid" />
                    <field name="write_uid"/>
                </tree>
            </field>
        </record>

        <!-- accredited_network action window -->
        <record id="accredited_network_layout_action" model="ir.actions.act_window">
            <field name="name">Accredited Network Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">accredited_network</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('accredited_network_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('accredited_network_layout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>

        <!-- Lightning view layout -->

        <record id="accredited_network_lightning_layout_form" model="ir.ui.view">
            <field name="name">Accredited Network Lightning Layout Form</field>
            <field name="model">accredited_network</field>
            <field name="arch" type="xml">
                <form string="Accredited Network Lightning Layout">
                    <sheet>
                        <notebook>
                            <page string='Details'>
                                <group>
                                    <group>
                                        <field name="Name" required='1'/>
                                        <field name="active__c"/>
                                        <field name="create_uid"/>
                                        <field name="create_date"/>
                                    </group>
                                    <group>
                                        <field name="region__c" required='1'/>
                                        <field name="write_uid" string='Last Modified By'/>
                                        <field name="write_date" string='Last Modified On'/>
                                    </group>
                                </group>
                            </page>
                            <page string="Related">
                                <group string="Network Providers Products">
                                    <field name="network_provider_ids">
                                        <tree>
                                            <field name="Name"/>
                                        </tree>
                                    </field>
                                </group>
                                <group string="Products Networks">
                                    <field name="product_network_ids">
                                        <tree>
                                            <field name="name"/>
                                            <field name="product_id" string='Product'/>
                                        </tree>
                                    </field>
                                </group>
                                <group string="Quote Line Items">
                                    <field name="quote_line_item_ids">
                                        <tree>
                                            <field name="Product2Id" string='Product'/>
                                            <field name="Quantity"/>
                                            <field name="UnitPrice"/>
                                            <field name="ListPrice"/>
                                            <field name="Subtotal"/>
                                            <field name="TotalPrice"/>
                                            <field name="Discount"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- accredited_network lightning tree view -->
        <record id="accredited_network_lightning_layout_tree" model="ir.ui.view">
            <field name="name">Accredited Network Layout Tree</field>
            <field name="model">accredited_network</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name" />
                    <field name="active__c"/>
                    <field name="region__c"/>
                    <field name="create_uid" />
                    <field name="write_uid"/>
                </tree>
            </field>
        </record>

        <!-- accredited_network lightning action window -->
        <record id="accredited_network_lightning_layout_action" model="ir.actions.act_window">
            <field name="name">Accredited Network</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">accredited_network</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('accredited_network_lightning_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('accredited_network_lightning_layout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>