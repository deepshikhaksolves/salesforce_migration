<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- Accredited Network Layout form view -->
        <record id="accredited_network_layout_form" model="ir.ui.view">
            <field name="name">Accredited Network Layout Form</field>
            <field name="model">accredited_network</field>
            <field name="arch" type="xml">
                <form string="Accredited Network Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="Name"/>
                                <field name="active__c"/>
                                <field name="create_uid"/>
                            </group>
                            <group>
                                <field name="region__c"/>
                                <field name="write_uid" string='Last Modified By'/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Network Providers Products">
                                <group>
                                    
                                </group>
                            </page>
                            <page string="Products Networks">
                                <group>
                                    
                                </group>
                            </page>
                            <page string="Quote Line Items">
                                <group>
                                    
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- accredited_network tree view -->
        <record id="accredited_network_layout_tree" model="ir.ui.view">
            <field name="name">Accredited Network Layout Tree</field>
            <field name="model">accredited_network</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name" />
                    <field name="active__c"/>
                    <field name="region__c"/>
                    <field name="create_uid" />
                    <field name="write_uid"/>
                </tree>
            </field>
        </record>

        <!-- accredited_network action window -->
        <record id="accredited_network_layout_action" model="ir.actions.act_window">
            <field name="name">Accredited Network Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">accredited_network</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('accredited_network_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('accredited_network_layout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>