<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
         <!--Market Reserve Layout form view -->
        <record id="market_reserve_c_form" model="ir.ui.view">
            <field name="name"> Market Reserve C Layout</field>
            <field name="model">model_market_reserve__c</field>
            <field name="arch" type="xml">
                <form string="Market Reserve C Layout">
                    <header>
                        <field name="Status_c" widget='statusbar'/>
                    </header>
                    <sheet>
                        <notebook>
                            <page string="Details">
                                <group>
                                    <group>
                                        <field name="Name" required='1'/>
                                        <field name="Seller_c"/>
                                        <field name="Start_c"/>
                                        <field name="How_c"/>
                                        <field name="Account_c" required='1'/>
                                    </group>
                                    <group>
                                        <field name="OwnerId"/>
                                        <field name="Reason_c"/>
                                        <field name="End_c"/>
                                    </group>
                                </group>
                            </page>
                            <!-- <page string="Related">
                                
                            </page> -->
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
         <!-- Market Reserve C Layout tree view -->
        <record id="market_reserve_c_tree" model="ir.ui.view">
            <field name="name">Market_Reserve__c_Tree</field>
            <field name="model">model_market_reserve__c</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name" />
                    <field name="Seller_c"/>
                    <field name="Start_c"/>
                    <field name="End_c"/>
                    <field name="OwnerId"/>
                </tree>
            </field>
        </record>

        <record id="market_reserve_c_action" model="ir.actions.act_window">
            <field name="name">Market Reserve</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_market_reserve__c</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('market_reserve_c_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('market_reserve_c_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>