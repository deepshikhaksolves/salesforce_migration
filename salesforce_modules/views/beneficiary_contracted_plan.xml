<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- beneficiary_contracted_plan Layout Start -->
        <record id="beneficiary_contracted_plan_layout_form" model="ir.ui.view">
            <field name="name">Beneficiary Contracted Plan Form</field>
            <field name="model">beneficiary.contract.plan</field>
            <field name="arch" type="xml">
                <form string="Beneficiary Contracted Plan Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="Name"/>
                                <field name="beneficiary_id"/>
                                <field name="contracted_plan_id"/>
                                <field name="start_date"/>
                                <field name="End_date_Adm"/>
                                <field name="end_date"/>
                                <field name="start_date_adm"/>
                                <field name="reason_for_cancellation"/>
                                <field name="reason_for_beneficial_inclusion_id"/>
                                <field name="create_uid"/>
                            </group>
                            <group>
                                <field name="OwnerId"/>
                                <field name="write_uid" string='Last Modified By'/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- beneficiary_contracted_plan Layout tree view -->
        <record id="beneficiary_contracted_plan_layout_tree" model="ir.ui.view">
            <field name="name">Beneficiary Contracted Plan Layout Tree</field>
            <field name="model">beneficiary.contract.plan</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name"/>
                    <field name="beneficiary_id"/>
                    <field name="contracted_plan_id"/>
                    <field name="start_date"/>
                    <field name="End_date_Adm"/>
                    <field name="end_date"/>
                    <field name="start_date_adm"/>
                    <field name="reason_for_cancellation"/>
                    <field name="reason_for_beneficial_inclusion_id"/>
                    <field name="create_uid"/>
                </tree>
            </field>
        </record>

        <!-- beneficiary_contracted_plan Layout action window -->
        <record id="beneficiary_contracted_plan_layout_action" model="ir.actions.act_window">
            <field name="name">Beneficiary Contracted Plan Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">beneficiary.contract.plan</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('beneficiary_contracted_plan_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('beneficiary_contracted_plan_layout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>