<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- record type Cases General Case Layout Start -->
        <record id="case_recordtype_general_case_form" model="ir.ui.view">
            <field name="name">General Case Layout</field>
            <field name="model">model_case</field>
            <field name="arch" type="xml">
                <form string="General Case Layout">
                    <header>
                        <field name="Status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <notebook>
                            <page string="Details">
                                <group>
                                    <group>
                                        <field name="Subject"/>
                                        <field name="Type"/>
                                        <field name="Request"/>
                                        <field name="Priority"/>
                                        <field name="CreatedDate"/>
                                        <field name="ClosedDate"/>
                                        <field name="SuppliedName"/>
                                        <field name="SuppliedEmail"/>
                                        <field name="Reason"/>
                                        <field name="Stage"/>
                                        <!-- Entitlement object is not developed -->
                                    </group>
                                    <group>
                                        <field name="AccountId"/>
                                        <field name="Contract_id"/>
                                        <field name="Contract_New"/>
                                        <field name="ContactId"/>
                                        <field name="Origin"/>
                                        <field name="client_view_permission"/>
                                        <field name="Reopening"/>
                                        <field name="Visible_to_the_Customer"/>
                                        <field name="ParentId"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Related">
                                <group string="Related Cases">
                                    <field name="case_ids"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--general case tree view-->
        <record id="case_recordtype_general_case_layout_tree" model="ir.ui.view">
            <field name="name">General Case Layout</field>
