<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- record_type form view -->
        <record id="record_type_form" model="ir.ui.view">
            <field name="name">record_type Layout</field>
            <field name="model">record_type</field>
            <field name="arch" type="xml">
                <form string="Record Type">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- record_type tree view -->
        <record id="record_type_layout_tree" model="ir.ui.view">
            <field name="name">record_type Layout Tree</field>
            <field name="model">record_type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- record_type action window -->
        <record id="record_type_action" model="ir.actions.act_window">
            <field name="name">Record Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">record_type</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('record_type_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('record_type_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>