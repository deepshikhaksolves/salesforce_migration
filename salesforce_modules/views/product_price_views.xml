            <field name="res_model">product_price</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('product_age_group_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('product_age_group_view_form')})]"/>
            <field name="help" type="html">
