<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- workflow config form view -->
        <record id="workflow_config_form" model="ir.ui.view">
            <field name="name">workflow_config Layout</field>
            <field name="model">workflow_configuration</field>
            <field name="arch" type="xml">
                <form string="workflow configuration">
                    <sheet>
                        <group>
                            <group>
                                <field name="Name"/>
                                <field name="RecordTypeId_c"/>
                                <field name="RecordType_c"/>
                                <field name="Object_c"/>
                                <field name="Initial_Status_c"/>
                                <field name="ObjectStatusField_c"/>
                                <field name="Initial_Status_c"/>
                                <field name="Description_c"/>
                                <field name="Workflow_Standard_of_Object_c"/>
                                <field name="create_uid"/>
                            </group>
                            <group>
                                <field name="OwnerId"/>
                                <field name="write_uid" string='Last Modified By'/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- workflow config tree view -->
        <record id="workflow_config_layout_tree" model="ir.ui.view">
            <field name="name">workflow_config Layout Tree</field>
            <field name="model">workflow_configuration</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name"/>
                    <field name="RecordTypeId_c"/>
                    <field name="RecordType_c"/>
                    <field name="Object_c"/>
                    <field name="Initial_Status_c"/>
                    <field name="ObjectStatusField_c"/>
                    <field name="Initial_Status_c"/>
                    <field name="Description_c"/>
                    <field name="Workflow_Standard_of_Object_c"/>
                    <field name="create_uid"/>
                </tree>
            </field>
        </record>

        <!-- workflow config action window -->
        <record id="workflow_config_layout_action" model="ir.actions.act_window">
            <field name="name">Workflow configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">workflow_configuration</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('workflow_config_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('workflow_config_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>