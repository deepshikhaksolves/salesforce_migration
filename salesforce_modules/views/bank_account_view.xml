<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- bank account form view -->
        <record id="bank_account_view_form" model="ir.ui.view">
            <field name="name">Bank Account Layout</field>
            <field name="model">account.setup.bank.manual.config</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="bank_id" required="1"/>
                                <field name="Account_Type"/>
                                <field name="Name"/>
                                <field name="Bank_Branch"/>
                                <field name="acc_number"/>
                                <field name="create_uid" string='Created By'/>
                            </group>
                            <group>
                                <field name="Account_id"/>
                                <field name="OwnerId"/>
                                <field name="Bank_Digit"/>
                                <field name="Account_Digit"/>
                                <field name="write_uid" string='Last Modified By'/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Bank Account Layout tree view -->
        <record id="bank_account_view_tree" model="ir.ui.view">
            <field name="name">Bank Account Layout Tree</field>
            <field name="model">account.setup.bank.manual.config</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Account_Type"/>
                    <field name="Name"/>
                    <field name="Bank_Branch"/>
                    <field name="acc_number"/>
                    <field name="create_uid" string='Created By'/>
                    <field name="Account_id"/>
                    <field name="OwnerId"/>
                    <field name="Bank_Digit"/>
                    <field name="Account_Digit"/>
                    <field name="write_uid" string='Last Modified By'/>
                </tree>
            </field>
        </record>

        <!-- Bank Account Layout action window -->
        <record id="bank_account_layout_action" model="ir.actions.act_window">
            <field name="name">Bank Account Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.setup.bank.manual.config</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('bank_account_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('bank_account_view_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>