<odoo>
    <data>
         <!--Subject C Layout form view -->
        <record id="subject_c_form" model="ir.ui.view">
            <field name="name"> Subject C Layout</field>
            <field name="model">model_subject_c</field>
            <field name="arch" type="xml">
                <form string="Subject C Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="Name"/>
                                <field name="periodicity_id"/>
                                <field name="Name"/>
                                <field name="create_uid" string="Created By"/>
                            </group>
                            <group>
                                <field name="Status"/>
                                <field name="write_uid" string="Last Modified By"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Cases">
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Subject C Layout tree view -->
        <record id="subject_c_tree" model="ir.ui.view">
            <field name="name">Subject_c_Tree</field>
            <field name="model">model_subject_c</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name"/>
                    <field name="create_uid" string="Created By"/>
                    <field name="write_uid" string="Last Modified By"/>
                    <field name="Status"/>
                </tree>
            </field>
        </record>

        <!-- Subject C Layout action window -->
        <record id="subject_c_action" model="ir.actions.act_window">
            <field name="name">Subject C Action Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_subject_c</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('subject_c_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('subject_c_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>