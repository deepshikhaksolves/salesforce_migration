<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="financial_contract_form" model="ir.ui.view">
            <field name="name">Financial contract Layout Form</field>
            <field name="model">financial_contract</field>
            <field name="arch" type="xml">
                <form string="Financial contract">
                    <sheet>
                        <group>
                            <group>
                                <field name="contract_id"/>
                                <field name="Type_of_Revenue"/>
                                <field name="Value" required="1"/>
                            </group>
                            <group>
                                <field name="Start_Date"/>
                                <field name="End_Date"/>
                                <field name="create_uid"/>
                            </group>
                        </group>
                        <notebook>

                            <page string="Notes &amp; Attachments">
                                <field name="attachment_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="financial_contract_tree" model="ir.ui.view">
            <field name="name">Financial contract Layout Tree</field>
            <field name="model">financial_contract</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="contract_id"/>
                    <field name="Type_of_Revenue"/>
                    <field name="Value"/>
                    <field name="create_uid"/>
                </tree>
            </field>
        </record>
        <record id="financial_contract_action" model="ir.actions.act_window">
            <field name="name">Financial contract Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">financial_contract</field>
            <field name="view_mode">form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('financial_contract_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('financial_contract_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>