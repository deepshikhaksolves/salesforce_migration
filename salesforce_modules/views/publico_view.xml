<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Publico Layout Start -->
        <record id="publico_layout_form" model="ir.ui.view">
            <field name="name">Publlico Layout</field>
            <field name="model">model_publico</field>
            <field name="arch" type="xml">
                <form string="Publico Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="Name"/>
                                <field name="Related_Entity_Id"/>
                                <field name="Type"/>
                                <field name="FDescription"/>
                                <field name="Full_Description"/>
                                <field name="carrier_id"/>
                                <field name="Entity_Type"/>
                                <field name="create_uid" string='Created By'/>
                            </group>
                            <group>
                                <field name="OwnerId"/>
                                <field name="write_uid" string='Last Modified By'/>
                            </group>
                        </group>
                        <notebook>
                            <page string ="Cases"></page>
                            <page string ="Cases (answered)"></page>
                            <page string="Cases (Applicant)"></page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Publico tree view -->
        <record id="publico_layout_view_tree" model="ir.ui.view">
            <field name="name">Publico Layout Tree</field>
            <field name="model">model_publico</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name"/>
                    <field name="Related_Entity_Id"/>
                    <field name="Type"/>
                    <field name="FDescription"/>
                    <field name="Full_Description"/>
                    <field name="carrier_id"/>
                    <field name="Entity_Type"/>
                    <field name="OwnerId"/>
                </tree>
            </field>
        </record>

        <!-- Publico Layout action window -->
        <record id="publico_layout_action" model="ir.actions.act_window">
            <field name="name">Publico</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_publico</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('publico_layout_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('publico_layout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>