<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!--Legal Pending matter Layout Start-->
        <record id="legal_pending_matter_layout_form" model="ir.ui.view">
            <field name="name">Legal Pending Layout Form</field>
            <field name="model">model_legal_pending_matter</field>
            <field name="arch" type="xml">
                <form string="Legal Pending Matter Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="lawsuit_number"/>
                                <field name="lawsuit_source"/>
                                <field name="observation"/>
                            </group>
                            <group>
                                <field name="active"/>
                                <field name="subcontract_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Open Activities"/>
                            <page string="Activity History"/>
                            <page string="Notes/Attachments"/>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Legal Pending tree view -->
        <record id="legal_pending_layout_tree" model="ir.ui.view">
            <field name="name">Legal Pending Layout Tree</field>
            <field name="model">model_legal_pending_matter</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="lawsuit_number"/>
                    <field name="lawsuit_source"/>
                    <field name="observation"/>
                    <field name="active"/>
                    <field name="subcontract_id"/>
                </tree>
            </field>
        </record>

        <!-- leagal_pending_matter layout action window -->
        <record id="legal_pending_matter_action" model="ir.actions.act_window">
            <field name="name">Legal Pending Matter Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_legal_pending_matter</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('legal_pending_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('legal_pending_matter_layout_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>