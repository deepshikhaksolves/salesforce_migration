<odoo>
    <data>
         <!--Case Request C Layout form view -->
        <record id="case_request_c_form" model="ir.ui.view">
            <field name="name">Case Request C Layout</field>
            <field name="model">model_case_request_c</field>
            <field name="arch" type="xml">
                <form string="Case Request C Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="Name"/>
                                <field name="Case_id"/>
                                <field name="Status"/>
                                <field name="Cancel_Date"/>
                                <field name="Comments"/>
                                <field name="Case_Model_id"/>
                                <field name="Request_id"/>
                                <field name="Subject_id"/>
<!--                                <field name="Case_Request_SLA_id"/>Field Not Define-->
                                <field name="SLAF"/>
                                <field name="Case_Priority"/>
                                <field name="Case_Reason"/>
                                <field name="create_uid" string="Created By"/>
                            </group>
                            <group>
                                <field name="OwnerId"/>
                                <field name="write_uid" string="Last Modified By"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Open Activities">
                            </page>

                            <page string="Activity History">
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

         <!-- Case Request C Layout tree view -->
        <record id="case_request_c_tree" model="ir.ui.view">
            <field name="name">Case Request C Tree</field>
            <field name="model">model_case_request_c</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name"/>
                    <field name="Case_id"/>
                    <field name="Status"/>
                    <field name="Cancel_Date"/>
                    <field name="Comments"/>
                </tree>
            </field>
        </record>

         <!-- Case Request C Layout action window -->
        <record id="case_request_c_action" model="ir.actions.act_window">
            <field name="name">Case Request C Action Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_case_request_c</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('case_request_c_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('case_request_c_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>

    </data>
</odoo>