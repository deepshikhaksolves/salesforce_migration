<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- model.name form view -->
        <record id="user_profile_page_layout_form" model="ir.ui.view">
            <field name="name">User Profile Page Layout</field>
            <field name="model">res.users</field>
            <field name="priority" eval="50"/>
            <field name="arch" type="xml">
                <form string="User Profile Page Layout">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="ManagerId" />
                                <field name="customer__c" />
                                <field name="heads__c"/>
                            </group>
                            <group>
                                <field name="Title"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Contact">
                                <group>
                                    <group>
                                        <!-- <field name="SenderEmail" /> -->
				                        <field name="login" string='Email Sender Address'/>
                                        <field name="MobilePhone"/>
                                        <field name="Phone"/>
                                    </group>
                                    <group>
                                        <label for="street" string="Address"/>
                                        <div class="o_address_format">
                                            <field name="street" placeholder="Street..." class="o_address_street"/>
                                            <field name="street2" placeholder="Street 2..." class="o_address_street" />
                                            <field name="city" placeholder="City" class="o_address_city" />
                                            <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                            <field name="zip" placeholder="ZIP" class="o_address_zip" />
                                            <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" />
                                        </div>
                                    </group>
                                </group>
                            </page>
                            <page string="Background">
                                <group>
                                    <field name="about_me" />
                                    <field name="reservations_to_vencer__c"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- model.name tree view -->
        <record id="user_profile_page_layout_tree" model="ir.ui.view">
            <field name="name">User Profile Page Layout Tree</field>
            <field name="model">res.users</field>
            <field name="priority" eval="50"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="ManagerId"/>
                    <field name="Title" />
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <!-- user_profile_page_layout action window -->
        <record id="user_profile_page_layout_action" model="ir.actions.act_window">
            <field name="name">User Profile Page Layout</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.users</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('user_profile_page_layout_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('user_profile_page_layout_form')})]"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>
