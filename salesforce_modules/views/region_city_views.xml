<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- region city form view -->
        <record id="region_city_form" model="ir.ui.view">
            <field name="name">region_city Layout</field>
            <field name="model">model_region_city</field>
            <field name="arch" type="xml">
                <form string="Record Type">
                    <sheet>
                        <group>
                            <group>
                                <field name="region" />
                                <field name="priority"/>
                                <field name="state_c"/>
                                <field name="create_uid"/>
                            </group>
                            <group>
                                <field name="city_c"/>
                                <field name="write_uid" string='Last Modified By'/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- region_city tree view -->
        <record id="region_city_tree" model="ir.ui.view">
            <field name="name">region_city Layout Tree</field>
            <field name="model">model_region_city</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="region" />
                    <field name="priority"/>
                    <field name="state_c"/>
                    <field name="create_uid"/>
                </tree>
            </field>
        </record>

        <!-- region_city action window -->
        <record id="region_city_action" model="ir.actions.act_window">
            <field name="name">City Of The Region</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model_region_city</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0), 
                (0, 0, {'view_mode': 'tree', 'view_id': ref('region_city_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('region_city_form')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records available.
                </p>
            </field>
        </record>
    </data>
</odoo>