<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="broker_view_form" model="ir.ui.view">
        <field name="name">broker.view.form</field>
        <field name="model">broker</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="Broker_Type"/>
                            <field name="Account"/>
                            <field name="Name"/>
                            <field name="Logo"/>
                        </group>
                        <group>
                            <field name="OwnerId"/>
                            <field name="Portfolio_Segmentation"/>
                            <field name="SUSEp_Code"/>
                        </group>
                    </group>
                    
                    <group string="Payment Rule">
                        <group>
                            <field name="Payment_Period"/>
                            <field name="create_uid"/>
                        </group>
                        <group>
                            <field name="Minimum_Payment"/>
                            <field name="write_uid" string='Last Modified By'/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Bills">
                            <!-- <field name="line_ids"/> -->
                        </page>
                        <page string="Benefit Policies">
                            <field name="benifit_politic_ids">
                                <tree>
                                    <field name="Name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="broker_action" model="ir.actions.act_window">
        <field name="name">broker</field>
        <field name="res_model">broker</field>
        <field name="view_mode">form</field>
    </record>
</odoo>
