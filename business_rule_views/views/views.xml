<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="business_rule_show_popup" model="ir.ui.view">
        <field name="name">show popup</field>
        <field name="model">config.open.view</field>
        <field name="inherit_id" ref="business_rule_action.form_business_rule"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ir_model']" position="after">
                <field name="show_popup"/>
            </xpath>

        </field>
    </record>
</odoo>