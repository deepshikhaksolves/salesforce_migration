<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="salesforce_form_view">
            <field name="name">salesforce.form</field>
            <field name="model">salesforce.connector</field>
            <field name="arch" type="xml">
                <form string="SalesForce Settings" create="false" edit="true" delete="false">
                    <sheet>
                        <group>
                            <group>
                                <h1>ODOO CONNECTOR</h1>
                            </group>
                            <group>
                                <group/>
                                <group>
                                    <div>
                                        <label for="last_sync_date" string="Last Sync Date :" style="text-align:right;"/>
                                        <field name="last_sync_date"/>
                                    </div>
                                </group>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="accounts"/>
                                <field name="contacts"/>
                                <field name="individuals"/>
                                <field name="rep__c"/>
<!--                                <field name="pricebook"/>-->
<!--                                <field name="partner_ntwrk_con"/>-->
                                <field name="leads"/>
                                <field name="opportunities"/>
                                <field name="tasks"/>
                                <field name="geographic_scope"/>
<!--                                <field name="sales_orders"/>-->
<!--                                <field name="products"/>-->
                            </group>
                            <group>
                                <div colspan="2" style="color: #598ead; padding-bottom: 20px; font-size: 15px; font-weight: bold;">
                                    Select Date Range for Importing Data(To date is excluded from the range)
                                </div>
                                <group>
                                    <field name="from_date" readonly="0"/>
                                    <field name="to_date" readonly="0"/>
                                </group>
                                <group>
                                    <field name="max_rec_per_job"/>
                                    <field name="include_custm"/>
                                </group>
                            </group>
                            <group>
                                <button name="sync_data" type="object" string="Sync" class="oe_highlight"
                                        icon="fa-refresh fa-2x" style="width:20%"/>
<!--                                <button name="get_salesforce_user_info" type="object" string="check count" class="oe_highlight"-->
<!--                                        icon="fa-refresh fa-2x" style="width:20%"/>-->
                            </group>
                            <group>
                                <field name="last_daily_sync_date" string="Next Daily Sync Date"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="salesforce_tree_view">
            <field name="name">salesforce.tree</field>
            <field name="model">salesforce.connector</field>
            <field name="arch" type="xml">
                <tree string="salesforce Users" create="false" edit="false" delete="false">
                    <field name="field_name"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="salesforce_action">
            <field name="name">practise window</field>
            <field name="res_model">salesforce.connector</field>
            <field name="view_mode">form,tree</field>
            <field name="res_id" ref="salesforce_connector.my_record_01"/>
            <field name="target">current</field>
        </record>


        <menuitem id="main_salesforce_menu" name="SalesForce"
                  groups="base.group_system"
                  web_icon="salesforce_connector,static/description/icon.png"/>

        <menuitem id="salesforce_menu" name="SalesForce" sequence="1"
                  parent="main_salesforce_menu" action="salesforce_action"/>

    </data>
</odoo>