<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.salesforce_connector</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="50"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Salesforce Connector" string="Salesforce Connector"
                     data-key="salesforce_connector">
                    <h2>SalesForce Settings</h2>
                    <div class="row mt16 o_settings_container" name="sf_setting">
                        <div class="col-12 col-lg-10 o_setting_box" name="sf_credentials">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Salesforce Credentials</span>
                                <div class="row">
                                    <div class="text-muted col-lg-8">
                                        Please fill following Credentials to get connected.
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="sf_username" class="col-lg-3 o_light_label"/>
                                        <field name="sf_username"/>
                                    </div>
                                    <div class="row">
                                        <label for="sf_password" class="col-lg-3 o_light_label"/>
                                        <field name="sf_password" password="True"/>
                                    </div>
                                    <!--                                        <div class="row">-->
                                    <!--                                            <label for="sf_security_token" class="col-lg-3 o_light_label"/>-->
                                    <!--                                            <field name="sf_security_token"/>-->
                                    <!--                                        </div>-->
                                    <div class="row">
                                        <label for="sf_organization_id" class="col-lg-3 o_light_label"/>
                                        <field name="sf_organization_id"/>
                                    </div>
                                    <div class="row">
                                        <label for="sf_domain_name" class="col-lg-3 o_light_label"/>
                                        <field name="sf_domain_name"/>
                                    </div>
                                    <div class="row">
                                        <label for="sf_version" class="col-lg-3 o_light_label"/>
                                        <div>
                                            <field name="sf_version"/>
                                            <field name="version" style="padding-left: 8px;"
                                                   attrs="{&quot;invisible&quot;: [[&quot;sf_version&quot;,&quot;!=&quot;,&quot;others&quot;]],
                                                               &quot;required&quot;: [[&quot;sf_version&quot;,&quot;=&quot;,&quot;others&quot;]]}"/>
                                        </div>
                                    </div>
                                    <div style="padding-top: 5px;">
                                        <button string="TEST CREDENTIALS"
                                                name="test_credentials" type="object" class="btn-primary"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="action_sf_general_configuration" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'salesforce_connector'}</field>
    </record>

    <menuitem
            id="menu_config"
            name="Settings"
            parent="salesforce_connector.sf_configuration_menu"
            sequence="2"
            action="action_sf_general_configuration"
            groups="base.group_system"/>
</odoo>