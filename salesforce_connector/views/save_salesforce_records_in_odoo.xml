<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="salesforce_sync_or_save_form_view">
            <field name="name">salesforce.sync.data</field>
            <field name="model">sf.sync.data</field>
            <field name="arch" type="xml">
                <form string="Save SalesForce Data" create="false" edit="true" delete="false">
                    <sheet>
                        <group>
                            <group>
                                <h1>Save Salesforce data in odoo</h1>
                                <field name="re_import"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="accounts"/>
                                <field name="contacts"/>
                                <field name="individuals"/>
                                <field name="rep__c"/>
                                <field name="opportunities"/>
                                <field name="leads"/>
                                <field name="task"/>
                                <button name="save_salesforce_data" type="object" string="Save All Records" class="oe_highlight"
                                        icon="fa-refresh fa-2x" style="width:50%;margin-top:1rem"/>
                            </group>
                            <group>
                                <div colspan="2" style="color: #598ead; padding-bottom: 20px; font-size: 15px; font-weight: bold;">
                                    Select Date Range for Saving Data
                                </div>
                                <group>
                                    <field name="from_date" readonly="0"/>
                                    <field name="to_date" readonly="0"/>
                                    <button name="save_salesforce_data" type="object" string="Save Specific Dated Records" class="oe_highlight"
                                            icon="fa-refresh fa-2x" style="width:170%;margin-top:1rem;" context="{'is_range_wise': True}"/>
                                </group>
                            </group>
                        </group>
                        <group string="Showing Total Records In salesforce">
                            <group>
                                <field name="sf_records_ratio"/>
                                <button name="refresh_total_records" type="object" string="Refresh Records Count" class="oe_highlight"
                                        icon="fa-refresh fa-2x" style="margin-top:1rem;"/>
                            </group>
                        </group>
                        <group string="Fetch Sale order document">
                            <group>
                                <field name="max_rec_to_fetch"/>
                                <field name="sale_attachments_left"/>
                                <button name="start_fetching_records_for_attachments" type="object" string="Fetch Sales docs" class="oe_highlight"
                                        icon="fa-refresh fa-2x" style="margin-top:1rem;"/>
                                <button name="start_saving_sales_docs_urls" type="object" string="Save Sales docs" class="oe_highlight"
                                        icon="fa-save fa-2x" style="margin-top:1rem;"/>
                            </group>
                        </group>
                        <group string="Convert Salesforce Task to odoo activities">
                            <group>
                                <field name="max_tasks_to_covert"/>
                                <field name="tasks_left_to_convert"/>
                                <button name="start_convert_task_to_activities" type="object" string="Convert Tasks" class="oe_highlight"
                                        icon="fa-save fa-2x" style="margin-top:1rem;"/>
                            </group>
                        </group>
                        <group string="Start Mapping Sage Sale orders">
                            <group colspan="2">
                                <span><b>(The sage sale order must present in the system to map)</b></span>
                            </group>
                            <group>
                                <field name="process_processed_order"/>
                                <field name="max_sale_attachments_to_process"/>
                                <field name="total_sale_order_attachments"/>
                                <field name="total_so_attachments_left_to_map"/>
                                <button name="start_for_sale_order_processing" type="object" string="Start mapping for sale orders" class="oe_highlight"
                                        icon="fa-save fa-2x" style="margin-top:1rem;"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="salesforce_sync_or_save_tree_view">
            <field name="name">salesforce.sync.tree</field>
            <field name="model">sf.sync.data</field>
            <field name="arch" type="xml">
                <tree string="salesforce save data" create="false" edit="false" delete="false">
                    <field name="field_name"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="save_data_action">
            <field name="name">salesforce.sync.data</field>
            <field name="res_model">sf.sync.data</field>
            <field name="view_mode">form,tree</field>
            <field name="res_id" ref="salesforce_connector.sf_sync_record"/>
            <field name="target">current</field>
        </record>

        <menuitem id="sf_save_salesforce_data" name="Save Records" sequence="2"
                  parent="main_salesforce_menu" action="save_data_action"/>
    </data>
</odoo>