<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="sf_sync_history_tree_view">
            <field name="name">salesforce.tree</field>
            <field name="model">salesforce.sync.history</field>
            <field name="arch" type="xml">
                <tree string="Salesforce Sync History"  decoration-success="status=='success'"
                      decoration-danger="status=='failed'" create="false" edit="false">
                    <field name="type"/>
                    <field name="sf_id"/>
                    <field name="operation"/>
                    <field name="sync_date"/>
                    <field name="status"/>
                    <field name="message"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="sf_log_action">
            <field name="name">Salesforce Sync History</field>
            <field name="res_model">salesforce.sync.history</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    The record sync history will show once you will import the salesforce record to Odoo.
                </p>
            </field>
        </record>

        <menuitem id="sf_sync_history_log_menu" name="Sync History" sequence="4"
                  parent="main_salesforce_menu" action="sf_log_action"/>

    </data>
</odoo>