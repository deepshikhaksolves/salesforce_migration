<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="sales_doc_url_form">
            <field name="name">sales.docs.url.form</field>
            <field name="model">sales.docs.url</field>
            <field name="arch" type="xml">
                <form string="Sales Docs Urls">
                    <sheet>
                        <group>
                            <field name="title"/>
                            <field name="type"/>
                            <field name="name" groups="base.group_no_one"/>
                            <field name="record_type"/>
                            <field name="status"/>
                            <field name="ref_sales_doc_opp" groups="base.group_no_one"/>
                            <field name="rel_sale_order"/>
                            <field name="attachment" widget="many2many_binary"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="sales_doc_url_tree">
            <field name="name">sales.docs.url.tree</field>
            <field name="model">sales.docs.url</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="title"/>
                    <field name="rel_sale_order"/>
                    <field name="type"/>
                    <field name="name" groups="base.group_no_one"/>
                    <field name="record_type"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="sales_docs_url_search_view">
            <field name="name">sales.docs.url.search.view</field>
            <field name="model">sales.docs.url</field>
            <field name="arch" type="xml">
                <search>
                    <group expand="0" string="Group By">
                        <filter string="Fetch Status" name="fetch_status_group_by" domain="[]" context="{'group_by':'status'}"/>
                    </group>
                    <group expand="0" string="Group By">
                        <filter string="Attachment Type" name="attachment_type_group_by" domain="[]" context="{'group_by':'type'}"/>
                    </group>
                    <group expand="0" string="Group By">
                        <filter string="Record Type" name="record_type_group_by" domain="[]" context="{'group_by':'record_type'}"/>
                    </group>
                    <group expand="0" string="Group By">
                        <filter string="Related sale order" name="rel_sale_order" domain="[]" context="{'group_by':'rel_sale_order'}"/>
                    </group>
                    <field name="name"/>
                    <field name="title"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="opp_sales_doc_form">
            <field name="name">opportunity.sales.docs.form</field>
            <field name="model">opportunity.sales.docs</field>
            <field name="arch" type="xml">
                <form string="Opportunity Sales Docs">
                    <sheet>
                        <group>
                            <group>
                                <field name="opp_name" readonly="1"/>
                            </group>
                            <group>
                                <field name="fetched_attachments" readonly="1"/>
                            </group>
                        </group>
                        <group string="All Attachments">
                            <field name="all_urls" readonly="1" nolabel="1">
                                <tree>
                                    <field name="title"/>
                                    <field name="type"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="opp_sales_doc_tree">
            <field name="name">opportunity.sales.docs.tree</field>
            <field name="model">opportunity.sales.docs</field>
            <field name="arch" type="xml">
                <tree string="salesforce Users">
                    <field name="opp_name"/>
                    <field name="all_urls"/>
                    <field name="fetched_attachments"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="opp_sales_docs_action">
            <field name="name">Opportunity Sales Docs</field>
            <field name="res_model">opportunity.sales.docs</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="opp_sales_docs_url_action">
            <field name="name">Opportunity Sales Docs URLs</field>
            <field name="res_model">sales.docs.url</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="process_fetch_sales_docs" model="ir.actions.server">
            <field name="name">Fetch Selected Sales Docs</field>
            <field name="model_id" ref="salesforce_connector.model_opportunity_sales_docs"/>
            <field name="binding_model_id" ref="salesforce_connector.model_opportunity_sales_docs"/>
            <field name="state">code</field>
            <field name="code">
                action = records.fetch_current_record_attachments()
            </field>
        </record>


        <record id="process_fetch_sales_docs_url" model="ir.actions.server">
            <field name="name">Fetch Current URLs</field>
            <field name="model_id" ref="salesforce_connector.model_sales_docs_url"/>
            <field name="binding_model_id" ref="salesforce_connector.model_sales_docs_url"/>
            <field name="state">code</field>
            <field name="code">
                action = records.fetch_current_record_url()
            </field>
        </record>

        <record id="process_sale_order_line_duplicate" model="ir.actions.server">
            <field name="name">Map to Sale Order</field>
            <field name="model_id" ref="salesforce_connector.model_sales_docs_url"/>
            <field name="binding_model_id" ref="salesforce_connector.model_sales_docs_url"/>
            <field name="state">code</field>
            <field name="code">
                action = records.map_file_to_sale_order()
            </field>
        </record>

        <menuitem id="opportunity_sales_docs_main_menu" name="Sales Docs" sequence="6"
                  parent="main_salesforce_menu"/>

        <menuitem id="opportunity_sales_docs" name="Sales Docs" sequence="1"
                  parent="opportunity_sales_docs_main_menu" action="opp_sales_docs_action"/>

        <menuitem id="opportunity_sales_docs_urls" name="All Sales Docs URLs" sequence="2"
                  parent="opportunity_sales_docs_main_menu" action="opp_sales_docs_url_action"/>

    </data>
</odoo>