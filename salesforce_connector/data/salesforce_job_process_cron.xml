<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="sf_ir_cron_job_process" model="ir.cron">
            <field name="name">Salesforce Queue Job Process</field>
            <field name="model_id" ref="model_sf_queue_jobs"/>
            <field name="state">code</field>
            <field name="code">model.process_queue_jobs(for_new=True)</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">0</field>
            <field name="doall" eval="False"/>
        </record>

        <!--cron for saving records from salesforce to sf.queue.jobs model-->
        <record id="sf_ir_cron_records_sync_process_1" model="ir.cron">
            <field name="name">Salesforce Queue Record Save Process 1</field>
            <field name="model_id" ref="model_sf_sync_data"/>
            <field name="state">code</field>
            <field name="code">model.process_saving_records()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">0</field>
            <field name="doall" eval="False"/>
        </record>
        <!--helper cron to restart the above cron-->
        <record id="sf_ir_cron_records_sync_process_2" model="ir.cron">
            <field name="name">Salesforce Queue Record Save Process 2</field>
            <field name="model_id" ref="model_sf_sync_data"/>
            <field name="state">code</field>
            <field name="code">model.process_saving_records(records=None)</field>
            <field name="interval_number">0</field>
            <field name="interval_type">months</field>
            <field name="numbercall">0</field>
            <field name="doall" eval="False"/>
        </record>
        <!--it is for task conversion to activities-->
        <record id="sf_tasks_conversion_process_1" model="ir.cron">
            <field name="name">Salesforce Queue Task Conversion Process 1</field>
            <field name="model_id" ref="model_sf_sync_data"/>
            <field name="state">code</field>
            <field name="code">model.convert_salesforce_tasks_to_activities(records=None)</field>
            <field name="interval_number">0</field>
            <field name="interval_type">months</field>
            <field name="numbercall">0</field>
            <field name="doall" eval="False"/>
        </record>
        <!--it helps in restarting the above cron-->
        <record id="sf_tasks_conversion_helper_process_2" model="ir.cron">
            <field name="name">Salesforce Queue Task Conversion Process 2</field>
            <field name="model_id" ref="model_sf_sync_data"/>
            <field name="state">code</field>
            <field name="code">model.helper_convert_salesforce_tasks(records=None)</field>
            <field name="interval_number">0</field>
            <field name="interval_type">months</field>
            <field name="numbercall">0</field>
            <field name="doall" eval="False"/>
        </record>

    </data>
    <!--it is for daily syncing the salesforce records to odoo-->
    <record id="salesforce_daily_sync_cron_job" model="ir.cron">
        <field name="name">Salesforce Daily Sync Job Process</field>
        <field name="model_id" ref="model_salesforce_connector"/>
        <field name="state">code</field>
        <field name="code">model.sync_salesforce_daily()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>

    <data noupdate="0">
        <!--it is for mapping sale attachments-->
        <record id="sf_sale_order_opp_mapping_process_1" model="ir.cron">
            <field name="name">Salesforce SO Map Process 1</field>
            <field name="model_id" ref="model_sales_docs_url"/>
            <field name="state">code</field>
            <field name="active">False</field>
            <field name="code">model.process_sale_order_file_name(records=None)</field>
            <field name="interval_number">0</field>
            <field name="interval_type">months</field>
            <field name="numbercall">0</field>
            <field name="doall" eval="False"/>
        </record>
        <!--it is for mapping sale attachments-->
        <record id="sf_sale_order_opp_mapping_process_2" model="ir.cron">
            <field name="name">Salesforce SO Map Process 2</field>
            <field name="model_id" ref="model_sales_docs_url"/>
            <field name="state">code</field>
            <field name="active">False</field>
            <field name="code">model.helper_process_sale_order_file_name(records=None)</field>
            <field name="interval_number">0</field>
            <field name="interval_type">months</field>
            <field name="numbercall">0</field>
            <field name="doall" eval="False"/>
        </record>
    </data>
</odoo>
